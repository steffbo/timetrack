# Production Environment Configuration Template
# Copy this file to .env.prod and fill in the actual values

# Database Configuration
DB_NAME=timetrack
DB_USERNAME=timetrack
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# JWT Configuration
# IMPORTANT: Generate a strong random secret (minimum 256 bits / 32 characters)
# You can generate one using: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_SECRET_AT_LEAST_32_CHARACTERS
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# CORS Configuration
# Set to your actual domain(s), comma-separated if multiple
ALLOWED_ORIGINS=https://zeit.remer.cc

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=INFO

# Note: SERVER_PORT is set to 8811 in docker-compose.prod.yml
# Note: SPRING_PROFILES_ACTIVE is set to 'prod' in docker-compose.prod.yml
